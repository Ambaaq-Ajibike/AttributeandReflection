{
          "version": "2.0.0",
          "tasks": [
                    {
                              "label": "build",
                              "command": "dotnet",
                              "type": "process",
                              "args": [
                                        "build",
                                        "${workspaceFolder}/AttributePractice.csproj",
                                        "/property:GenerateFullPaths=true",
                                        "/consoleloggerparameters:NoSummary"
                              ],
                              "problemMatcher": "$msCompile"
                    },
                    {
                              "label": "publish",
                              "command": "dotnet",
                              "type": "process",
                              "args": [
                                        "publish",
                                        "${workspaceFolder}/AttributePractice.csproj",
                                        "/property:GenerateFullPaths=true",
                                        "/consoleloggerparameters:NoSummary"
                              ],
                              "problemMatcher": "$msCompile"
                    },
                    {
                              "label": "watch",
                              "command": "dotnet",
                              "type": "process",
                              "args": [
                                        "watch",
                                        "run",
                                        "--project",
                                        "${workspaceFolder}/AttributePractice.csproj"
                              ],
                              "problemMatcher": "$msCompile"
                    }
          ]
}